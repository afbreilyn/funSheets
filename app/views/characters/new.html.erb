<div class='container-fluid' ng-controller='mainController' >
  <div class='panel panel-success'>
    <div class='panel-heading'>
      <h4 ng-if='name'> Hello, {{ name }} </h4>
      <h6 nf-if='skills'> Your skills are: {{ skills }} </h6>
    </div>

    <div class='panel-body'>
      <form class='form-inline'>
        <div> CHARACTER FIELDS </div>
        <div class='form-group'>
          <input 
            class='form-control'
            type='text'
            placeholder='Enter your name'
            autofocus
            ng-model='name'
            >
        </div>
      </form>

      </br>
      </br>

      <form class='form-inline'>
        <div> SKILLS FIELDS </div> 
        <div class='form-group' ng-repeat="skill in skills">
          <input
            class='form-control'
            placeholder='0'
            ng-model='skill["value"]'
            >
        </div>
      </form>

      </br>
      </br>

    </div>
    <div class=''>
      {{ test }}
    </div>
  </div>
</div>